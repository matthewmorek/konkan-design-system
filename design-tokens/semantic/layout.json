    "medium": {
      "value": "{layout-constants.baseline-grid-unit}*4",
      "type": "spacing"
    },
    "large": {
      "value": "{layout-constants.baseline-grid-unit}*6",
      "type": "spacing"
    },
    "xlarge": {
      "value": "{layout-constants.baseline-grid-unit}*8",
      "type": "spacing"
    },
    "2xlarge": {
      "value": "{layout-constants.baseline-grid-unit}*16",
      "type": "spacing"
    },
    "inset": {
      "2xsmall": {
        "value": "{space.2xsmall} {space.2xsmall}",
