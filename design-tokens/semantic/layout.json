      },
      "xsmall": {
        "value": "{space.xsmall} {space.xsmall}",
        "type": "spacing"
      },
      "small": {
        "value": "{space.small} {space.small}",
        "type": "spacing"
      },
      "medium": {
        "value": "{space.medium} {space.medium}",
        "type": "spacing"
      },
      "large": {
        "value": "{space.large} {space.large}",
        "type": "spacing"
      },
      "xlarge": {
        "value": "{space.xlarge} {space.xlarge}",
        "type": "spacing"
      },
      "2xlarge": {
        "value": "{space.2xlarge} {space.2xlarge}",
        "type": "spacing"
      }
    }
  },
  "layout-grid": {
    "margins": {
      "value": "0 {space.small}",
      "type": "spacing"
    },
    "gutters": {
      "value": "0 {space.small}",
      "type": "spacing"
    },
    "columns": {
      "value": "4",
      "type": "spacing"
    },
    "max-width": {
      "value": "{breakpoint.viewport.max}",
      "type": "spacing",
      "description": "Override this to set a max-width for the grid at larger breakpoints"
    }
  }
